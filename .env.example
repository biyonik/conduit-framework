# ============================================
# CONDUIT PHP FRAMEWORK
# Environment Configuration
# ============================================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control!

# ============================================
# Application Settings
# ============================================
APP_NAME="Conduit API"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

# Application Key (256-bit key for encryption)
# Generate: php conduit key:generate
APP_KEY=

# ============================================
# Database Configuration
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=conduit
DB_USERNAME=root
DB_PASSWORD=

# Database Prefix (optional)
DB_PREFIX=

# ============================================
# Cache Configuration
# ============================================
# Drivers: file, database, array
CACHE_DRIVER=file
CACHE_PREFIX=conduit_cache

# Cache lifetime (seconds)
CACHE_TTL=3600

# ============================================
# Session Configuration
# ============================================
# Drivers: file, database
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# ============================================
# Security Settings
# ============================================
# JWT Configuration
JWT_SECRET=
JWT_TTL=3600
JWT_REFRESH_TTL=604800

# Password Hashing
HASH_DRIVER=bcrypt
BCRYPT_ROUNDS=10

# CORS Settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1

# ============================================
# Logging
# ============================================
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_MAX_FILES=14

# ============================================
# Email Configuration (Optional)
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@conduit.local
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Third-party Services (Optional)
# ============================================

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Pusher (for websockets)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# ============================================
# Development Tools
# ============================================
# Enable query log in development
DB_QUERY_LOG=false

# API Documentation
API_DOCS_ENABLED=true