# ============================================
# CONDUIT PHP FRAMEWORK - .gitignore
# ============================================

# ============================================
# Environment & Configuration
# ============================================
.env
.env.local
.env.*.local

# ============================================
# Composer Dependencies
# ============================================
/vendor/
composer.lock

# ============================================
# Storage Directories
# ============================================
/storage/cache/*
!/storage/cache/.gitkeep

/storage/logs/*
!/storage/logs/.gitkeep

/storage/sessions/*
!/storage/sessions/.gitkeep

/storage/uploads/*
!/storage/uploads/.gitkeep

# ============================================
# Cache Files
# ============================================
/bootstrap/cache/*
!/bootstrap/cache/.gitkeep

# Cached routes and config
routes.cache.php
config.cache.php
services.cache.php

# ============================================
# Test & Coverage
# ============================================
/coverage/
.phpunit.result.cache
phpunit.xml
!/phpunit.xml.dist

# ============================================
# IDE & Editor Files
# ============================================
# PhpStorm
.idea/
*.iml

# VSCode
.vscode/
*.code-workspace

# Sublime Text
*.sublime-project
*.sublime-workspace

# NetBeans
nbproject/

# Eclipse
.buildpath
.project
.settings/

# ============================================
# OS Generated Files
# ============================================
# macOS
.DS_Store
.AppleDouble
.LSOverride
._*

# Windows
Thumbs.db
ehthumbs.db
Desktop.ini
$RECYCLE.BIN/

# Linux
*~
.directory
.Trash-*

# ============================================
# Backup & Temporary Files
# ============================================
*.bak
*.tmp
*.temp
*.swp
*.swo
*~
.*.sw?

# SQL dumps
*.sql
*.sqlite
*.sqlite3

# ============================================
# Node (if frontend assets are used)
# ============================================
node_modules/
npm-debug.log
yarn-error.log

# ============================================
# Documentation
# ============================================
/docs/_build/

# ============================================
# Logs
# ============================================
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# ============================================
# Framework Specific
# ============================================
# Keep empty directories
!.gitkeep

# Temporary test files
/test_route_cache.php
demo-*.php

# ============================================
# Rate Limiter Storage
# ============================================
/storage/framework/ratelimiter/*
!/storage/framework/ratelimiter/.gitkeep
